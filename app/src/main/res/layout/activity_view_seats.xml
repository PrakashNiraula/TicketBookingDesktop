<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".view_controller.ViewSeats">

    <androidx.cardview.widget.CardView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="20dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/busimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/background_light_ascent"
            app:cardCornerRadius="120dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/routedisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/busimage"
                android:text="Kathmandu to Pokhara"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/departuredatedisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/busimage"
                android:text="2020-08-22"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/statusdisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/busimage"
                android:text="LeavingOnTime"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/busnumberdisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/busimage"
                android:text="Bus no: AAA-431"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/departuretimedisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/busimage"
                android:text="4:00 PM"
                android:textColor="#FFF"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <include
                layout="@layout/seatlayout"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="60dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
                android:elevation="2dp"
                android:layout_gravity="right">

                <Button
                    android:id="@+id/btnbook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/overlay_color"
                    android:text="Confirm"
                    android:textColor="#FFF"
                    android:textSize="30sp" />
            </androidx.cardview.widget.CardView>



        </LinearLayout>





        </androidx.cardview.widget.CardView>





</RelativeLayout>
